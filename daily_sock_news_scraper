name: Run Stock News Scraper

on:
  schedule:
    - cron: '0 7 * * *'  # Runs every day at 7 AM UTC (12:30 PM IST)
  workflow_dispatch:  # Allows you to trigger it manually as well

jobs:
  run-scraper:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'  # You can specify a specific version if needed

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt  # Make sure you have a requirements.txt with dependencies

    - name: Run Stock News Scraper
      run: |
        python daily_stock_news_scraper.py  # Change to your script name if it's different
      env:
        EMAIL_USERNAME: ${{ secrets.EMAIL_USERNAME }}  # Store sensitive info in GitHub Secrets
        EMAIL_PASSWORD: ${{ secrets.EMAIL_PASSWORD }}  # Store sensitive info in GitHub Secrets
